<!DOCTYPE html>
<html>
<head>
    <title>HomeFlavour Online Ordering</title>
    <meta charset="utf-8">

    <link rel="stylesheet" href="/lib/reset/reset.css" >

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >
    <link rel="stylesheet" href="/lib/bootstrap4/bootstrap_addon.css" >

    <link rel="stylesheet" href="/lib/material_color/material-design-color-palette.css">

    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />



    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/menu.css">


    <style>
        .nav-tabs > .nav-item > .active {
            background-color : #eeeeee
        }
    </style>

</head>
<body>


{{>header}}
{{>sidebar}}

<section class="container-fluid t3-push" id="mainContainer">
    <div class="row">
        <div class="col-12" >


            <div id="TabPanel_Header">
                <div id="space_below_header" class="row" style="height: 55px;background-color: #333;"></div>
                <div id="NavTabsPanel" class="row" style="background-color: #333;">
                    <div class="col-md-12" >

                        <div class="card-header" style="background-color: #333">
                            <ul class="nav nav-tabs card-header-tabs nav-fill ">

                            {{#each menuData}}
                                <li class='nav-item'>
                                    <a id="NavTab_CategoryName" class='nav-link text-info' data-toggle='tab' href='#Div_{{category_id}}_table'>
                                        {{category_name}}
                                    </a>
                                </li>
                            {{/each}}
                            </ul>
                        </div>

                    </div>
                </div>
            </div>





            <div id="space_below_header">
                <br><br><br>
            </div>


            <div id='Div_TabContent_Tables' class="tab-content">
            {{#each menuData}}
                <div id='Div_{{category_id}}_table' class = 'tab-pane fade '>
                    <div class='row' >
                        {{#each items}}
                            <div class='col-md-4' style='margin-bottom: 20px;'>
                                <center>
                                    <div class='card w-90 addon-link'  data-href='/menudetail/{{item_category_id}}/{{item_id}}'>
                                        <img class='card-img-top img-fluid' src='{{@root.IMAGE_BACKENDFRONT_LINK_PATH}}{{item_image_name}}' >
                                        <div class='card-block'>
                                            <h4 class='text-center'>{{item_name}}</h4>
                                        </div>
                                    </div>
                                </center>
                            </div>
                        {{/each}}

                    </div>
                </div>
            {{/each}}

            </div>





















        <div id="space_before_footer">
            <br><br><br>
        </div>


    </div>
    </div>
</section>
{{>footer}}

<script type="text/javascript" ></script>

<script type="text/javascript" src="/lib/jquery/jquery.js" ></script>


<script type="text/javascript" src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap_addon.js" ></script>
<script type="text/javascript" src="/lib/t3/t3.js"></script>


<script type="text/javascript">
    $("#NavTab_CategoryName").first().trigger("click");
</script>

</body>


</html>