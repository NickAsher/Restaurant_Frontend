<html>
<head>
    <title>HomeFlavour Online Ordering</title>
    <meta charset="utf-8">
    <!-- All paths are relative to public folder-->
    <!--<link rel="stylesheet" href="/lib/reset/reset.css" >-->

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >
    <link rel="stylesheet" href="/lib/bootstrap4/bootstrap_addon.css" >

    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/index.css">

</head>
<body>
{{>header}}
{{>sidebar}}

<section class="container-fluid t3-push" id="mainContainer">
    <div class="row">
        <div class="col-12 bg-whitegrey" >



            <div id="space_below_header">
                <br><br><br><br><br>
            </div>



            <div class="col-md-12">

                <div id="Div_Map" class="card">
                    <div class="card-header">
                        <h3>Location</h3>
                    </div>

                    <div id="map" style="height: 400px;width: 100%"></div>

                </div>
                <br><br>

                <div class="row">

                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h3>Locate Us</h3>
                            </div>
                            <div class="card-block">
                                <div class="row">
                                    <div class="col-6">
                                        <img src='{{IMAGE_FRONTEND_LINK_PATH}}restaurant_logo.png' class="img-fluid" >
                                    </div>
                                    <div class="col-6">
                                        <h4>{{RESTAURANT_NAME}}</h4>
                                        <br>
                                        <p>
                                            {{RESTAURANT_ADDR1}} <br> {{RESTAURANT_ADDR2}} <br> {{RESTAURANT_ADDR3}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h3>Opening Hours</h3>
                            </div>
                            <div class="card-block">
                                <p>
                                    Monday :      {{RESTAURANT_HOURS.0.start_time}}   -   {{RESTAURANT_HOURS.0.end_time}}
                                    <br> Tuesday :  {{RESTAURANT_HOURS.1.start_time}}   -   {{RESTAURANT_HOURS.1.end_time}}
                                    <br> Wednesday :  {{RESTAURANT_HOURS.2.start_time}}   -   {{RESTAURANT_HOURS.2.end_time}}
                                    <br> Thursday :  {{RESTAURANT_HOURS.3.start_time}}   -   {{RESTAURANT_HOURS.3.end_time}}
                                    <br> Friday :  {{RESTAURANT_HOURS.4.start_time}}   -   {{RESTAURANT_HOURS.4.end_time}}
                                    <br> Saturday :   {{RESTAURANT_HOURS.5.start_time}}   -   {{RESTAURANT_HOURS.5.end_time}}
                                    <br> Sunday :  {{RESTAURANT_HOURS.6.start_time}}   -   {{RESTAURANT_HOURS.6.end_time}}
                                    ?>

                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h3>Contact Us</h3>
                            </div>
                            <div class="card-block">
                                <p>
                                    Phone : <br> {{RESTAURANT_PHONE}}  <br><br> Email :  <br> {{RESTAURANT_EMAIL}} <br><br>
                                </p>
                            </div>
                        </div>
                    </div>

                </div>





            </div>





            <div id="space_before_footer">
                <br><br><br>
            </div>


        </div>
    </div>
</section>


{{>footer}}
</body>

<script type="text/javascript" src="/lib/jquery/jquery.js" ></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap_addon.js" ></script>
<script type="text/javascript" src="/lib/t3/t3.js"></script>

</html>